{{>message}}
<title>{{event.eventname}}</title>
<main role="main" class="flex-grow-1 container my-5">

  <main role ="main "class="flex-grow-1 container my-5">
  <section class="card shadow p-4">
    <h1 class="card-title mb-4 text-center">{{event.eventname}}</h1>
    
    <div class="row mb-3">
      <div class="col-md-6">
        <p><strong>Building:</strong> {{event.building}}</p>
        <p><strong>Room Number:</strong> {{event.roomnumber}}</p>
        <p><strong>Brought to You By:</strong> {{event.clubsponser}}</p>
      </div>
      <div class="col-md-6">
        <p><strong>Date:</strong> {{event.eventDateFormatted}}</p>
        <p><strong>Start Time:</strong> {{event.startTimeFormatted}}</p>
        <p><strong>End Time:</strong> {{event.endTimeFormatted}}</p>
      </div>
    </div>

    <div>
      <h5 class="mb-2">Description</h5>
      <p class="card-text">
        {{event.eventdescription}}  
      </p>
    </div>
  </section>
  
<!--Leave Comment Box-->
<hr>
<section class="mt-4">
  <h4>Leave a Comment</h4>
  <form method="POST" action="/comment">
  <input type="hidden" name="eventid" value="{{event.eventid}}">
  <div class="mb-3">
    <textarea name="comment_text" class="form-control" rows="3" placeholder="Your comment here..." required></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Post Comment</button>
</form>

</section>

<!--Displayed Comments-->
<section class="mt-5">
  <h4>Comments</h4>
  {{#if comments.length}}
    <ul class="list-group">
      {{#each comments}}
        <li class="list-group-item">
          <strong>{{this.username}}</strong>: {{this.comment_text}}
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>No comments yet â€” be the first!</p>
  {{/if}}
</section>

</main>
