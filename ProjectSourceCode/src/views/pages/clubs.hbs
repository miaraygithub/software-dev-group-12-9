<title>Buff's Bulletin | Clubs</title>
<body>
  {{message}}
  <div class="container py-5">
    <h1 class="text-center mb-5">All Clubs</h1>
    {{#each clubsByCategory}}
      {{#if this.clubs}}
        <div class="d-flex justify-content-between align-items-center mb-3 border-bottom pb-2">
          <h2 class="h4 mb-0">{{this.categoryname}} Clubs</h2>
          {{#if (gt this.clubs.length 10)}} <!-- only show view more if there are more than 10 clubs in the category -->
            <a href="/clubs-by-category?category={{this.name}}" class="text-decoration-none">
              <small class="text-primary">View more</small>
            </a>
          {{/if}}
        </div>

        <!-- Scrollable Club Cards (max 10 shown) -->
        <div class="row flex-row flex-nowrap overflow-auto mb-5 pb-2" style="gap: 1rem;">
          {{#each (slice this.clubs 0 10)}}
            <div class="col-10 col-sm-6 col-md-4 col-lg-3">
              <div class="card h-100 shadow-sm border-0">
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title">{{this.clubname}}</h5>
                  <p class="card-text text-muted">{{this.clubdescription}}</p>
                  <div class="mt-auto">
                    <a href="/club-details?club={{this.clubname}}" target="_blank" class="btn btn-outline-primary btn-sm w-100">
                      View Club
                    </a>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      {{/if}}
    {{/each}}
  </div>
</body>
