<title>Buff's Bulletin | {{category}} Clubs</title>
<body>
  {{message}}
  <div class="container py-5">
    <h1 class="text-center mb-5">{{category}} Clubs</h1>
    <div class="row flex-row flex-nowrap overflow-auto mb-5 pb-2" style="gap: 1rem;"></div>
        {{#each clubs}} 
            <div class="col-10 col-sm-6 col-md-4 col-lg-3">
              <div class="card h-100 shadow-sm border-0">
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title">{{this.clubname}}</h5>
                  <p class="card-text text-muted">{{this.clubdescription}}</p>
                  <div class="mt-auto">
                    <a href="/club-details?club={{this.clubname}}" target="_blank" class="btn btn-outline-primary btn-sm w-100">
                      View Club
                    </a>
                  </div>
                </div>
              </div>
            </div>
        {{/each}}
    </div>
  </div>
</body>
